<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :url %>
  <%= f.text_field :url, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control', rows: 10 %>
</div>

<div class="form-group">
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list, value: f.object.tags_as_input, class: 'form-control' %>
</div>

<div class="form-group">
  <div class="form-check">
    <%= f.check_box :shared, class: 'form-check-input' %>
    <%= f.label :shared, class: 'form-check-label' %>
  </div>
</div>

<%= f.button 'Save', id: 'save-card', class: 'btn btn-default btn-primary' %> or <%= link_to 'Cancel', :back, id: 'cancel' %>
