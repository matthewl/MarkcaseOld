<h2 class="mt-5 text-center">Setup</h2>

<hr />

<%= form_for @account, url: setup_index_path do |f| %>
  <div class="form-group">
    <p>
      To complete your setup of Markcase, enter your account details.
    </p>
  </div>

  <div class="form-group">
    <%= f.label 'Your login' %>
    <%= f.text_field :login, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Your email' %>
    <%= f.text_field :email, class: 'form-control', type: 'email' %>
  </div>

  <div class="form-group">
    <%= f.label 'Your password' %>
    <%= f.text_field :password, class: 'form-control', type: 'password' %>
  </div>

  <div class="form-group">
    <%= f.label 'Confirm your password' %>
    <%= f.text_field :password_confirmation, class: 'form-control', type: 'password' %>
  </div>

  <hr />

  <%= f.button 'Complete setup', class: 'btn btn-default btn-primary btn-block' %>
<% end %>